<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hugo.estatefinder.serviceDetailFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:text="Company Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView8"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/description"
        android:layout_below="@+id/textView11"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="16dp"
        android:layout_above="@+id/button4"
        android:text="helloworld" />

    <TextView
        android:text="Phone:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/priceLabel"
        android:layout_alignLeft="@+id/priceLabel"
        android:layout_alignStart="@+id/priceLabel"
        android:layout_marginTop="10dp"
        android:id="@+id/phoneLabel" />

    <ImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        app:srcCompat="@drawable/ic_menu_gallery"
        android:id="@+id/imageView3"
        android:layout_below="@+id/textView8"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Email:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/phoneLabel"
        android:layout_alignLeft="@+id/phoneLabel"
        android:layout_alignStart="@+id/phoneLabel"
        android:layout_marginTop="15dp"
        android:id="@+id/emailLabel" />

    <TextView
        android:text="Hours:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/emailLabel"
        android:layout_alignLeft="@+id/emailLabel"
        android:layout_alignStart="@+id/emailLabel"
        android:layout_marginTop="30dp"
        android:id="@+id/hoursLabel" />

    <TextView
        android:text="Location:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hoursLabel"
        android:layout_alignLeft="@+id/hoursLabel"
        android:layout_alignStart="@+id/hoursLabel"
        android:layout_marginTop="15dp"
        android:id="@+id/locationLabel" />

    <Button
        android:text="Save to Favorites"
        android:layout_width="150dp"
        android:id="@+id/button4"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Comments"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/button7"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Contact"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/button6"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/locationLabel"
        android:layout_alignEnd="@+id/locationLabel" />

    <TextView
        android:text="Price:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:layout_marginStart="18dp"
        android:id="@+id/priceLabel"
        android:layout_alignTop="@+id/imageView3"
        android:layout_toRightOf="@+id/imageView3"
        android:layout_toEndOf="@+id/imageView3" />

    <TextView
        android:text="Description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView11"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/imageView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ratingBar"
        android:layout_marginBottom="24dp"
        android:layout_above="@+id/textView11"
        android:layout_alignLeft="@+id/avgRateLabel"
        android:layout_alignStart="@+id/avgRateLabel" />

    <TextView
        android:text="Avg Rate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/avgRateLabel"
        android:layout_above="@+id/ratingBar"
        android:layout_alignLeft="@+id/locationLabel"
        android:layout_alignStart="@+id/locationLabel" />

    <TextView
        android:text="map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/maplocation"
        android:layout_alignBaseline="@+id/locationLabel"
        android:layout_alignBottom="@+id/locationLabel"
        android:layout_toRightOf="@+id/avgRateLabel"
        android:layout_toEndOf="@+id/avgRateLabel"
        android:layout_marginLeft="22dp"
        android:layout_marginStart="22dp"
        android:textColor="@android:color/holo_blue_bright" />

    <TextView
        android:text="$18.50/hr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/priceLabel"
        android:layout_alignLeft="@+id/maplocation"
        android:layout_alignStart="@+id/maplocation"
        android:id="@+id/price" />

    <TextView
        android:text="604-999-3444"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/phoneNum"
        android:layout_alignBaseline="@+id/phoneLabel"
        android:layout_alignBottom="@+id/phoneLabel"
        android:layout_alignLeft="@+id/price"
        android:layout_alignStart="@+id/price"
        android:textColorLink="@android:color/holo_blue_light"
        tools:textColor="@android:color/holo_blue_bright" />

    <TextView
        android:text="landscape4free@gmail.com"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/hoursLabel"
        android:layout_alignLeft="@+id/phoneNum"
        android:layout_alignStart="@+id/phoneNum"
        android:id="@+id/email"
        android:textColor="@android:color/holo_blue_bright" />

    <TextView
        android:text="Mon-fri, 8:00am -5:30pm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/hours"
        android:layout_above="@+id/locationLabel"
        android:layout_alignLeft="@+id/maplocation"
        android:layout_alignStart="@+id/maplocation" />

</RelativeLayout>
